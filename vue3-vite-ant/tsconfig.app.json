{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "node_modules/vite-plugin-pwa/client.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@comp/*": ["./src/components/*"],
      "@assets/*": ["./src/components/assets/*"],
      "@img/*": ["./src/components/assets/img/*"],
      "@styl/*": ["./src/components/assets/styl/*"],
      "@views/*": ["./src/views/*"],
      "@router/*": ["./src/router/*"],
      "@store/*": ["./src/store/*"],
      "@js/*": ["./src/js/*"]
    }
  }
}
